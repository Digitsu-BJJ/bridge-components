<%= link_to path, data: local_assigns[:data] || {}, class: "list-group-item list-group-item-action d-flex py-3" do %>
  <div class="col flex-grow-0 flex-shrink-1 my-auto ps-1 pe-4">
    <i class="bi <%= icon %> fs-1"></i>
  </div>

  <div class="w-100 mx-auto">
    <p class="fs-5 d-flex align-items-middle mb-0">
      <% if local_assigns[:pro] %>
        <small><span class="badge bg-primary-subtle text-primary-emphasis me-2">PRO</span></small>
      <% end %>

      <span><%= name %></span>
    </p>
    <p class="mb-0 text-muted"><%= description %></p>
  </div>

  <div class="col flex-grow-0 flex-shrink-1 my-auto d-sm-none">
    <i class="bi bi-chevron-right"></i>
  </div>
<% end %>
